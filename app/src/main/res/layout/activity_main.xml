<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud3">

    <LinearLayout
        android:layout_above="@id/linButton2"
        android:id="@+id/linButton1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo71" />




        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="354dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_marginRight="@dimen/margin1"
            android:layout_weight="0.80">

        </ListView>


    </LinearLayout>

    <!--Botton-->
    <LinearLayout
        android:id="@+id/linButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnABme"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_marginRight="@dimen/margin1"
            android:layout_marginBottom="@dimen/margin1"
            android:text="About Me"
            android:onClick="NextPageABme"
            android:textColor="@color/textcolorPrimaryDark" />



    </LinearLayout>


</RelativeLayout>
