<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud3">


    <!--Head-->
    <ImageView
        android:id="@+id/imvTop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo71" />

    <!--Content-->
    <LinearLayout
        android:id="@+id/linTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvTop"
        android:orientation="vertical"
        android:padding="15dp">

        <!--Title-->
        <TextView
            android:id="@+id/txtTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="คำนวณปริมาณอาหาร"
            android:textColor="@color/textcolorPrimaryDark"
            android:textSize="@dimen/h1"
            android:textStyle="bold" />

        <!--Fill Input-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <!--Input-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:orientation="horizontal">








                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ปริมาณอาหาร"
                        android:textColor="@color/textcolorPrimaryDark"
                        android:textSize="@dimen/h2"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/txtVolume"
                        android:layout_width="131dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:inputType="number" />


                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/KG"
                        android:textColor="@color/textcolorPrimaryDark"
                        android:textSize="@dimen/h2" />


                </LinearLayout>

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

    <!--Answer-->
    <LinearLayout
        android:id="@+id/linBiomass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_below="@+id/linTitle"
        android:layout_alignParentStart="true">


        <!--Answer Biomass-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">





        </LinearLayout>


    </LinearLayout>

    <!--Botton-->
    <LinearLayout
        android:id="@+id/linButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="@string/Back"
            android:onClick="BackPage2"
            android:textColor="@color/textcolorPrimaryDark" />

        <Button
            android:id="@+id/btnCal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="@string/Calculate"
            android:textColor="@color/textcolorPrimaryDark" />

    </LinearLayout>

    <!--Animation-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linButton2"
        android:layout_below="@+id/linBiomass"
        android:gravity="center_horizontal"
        android:padding="15dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#82ffffff"
            android:src="@drawable/animation5"

            />


    </LinearLayout>


</RelativeLayout>

