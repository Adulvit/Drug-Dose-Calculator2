<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud3">


    <!--Head-->
    <ImageView
        android:id="@+id/imvTop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo10" />

    <!--Head Title-->
    <LinearLayout
        android:id="@+id/linTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvTop"
        android:orientation="vertical"
        android:padding="15dp">

        <!--Title-->
        <TextView
            android:id="@+id/txtTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Recommend"
            android:textColor="@color/textcolorPrimaryDark"
            android:textSize="@dimen/h1"
            android:textStyle="bold" />


    </LinearLayout>

    <!--Content-->
    <LinearLayout
        android:id="@+id/linDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linTitle"
        android:orientation="vertical"
        android:padding="15dp">


        <!--บรรทัดแรก-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="แนะนำให้ใช้"
                        android:textColor="@color/textcolorPrimaryDark"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtDrug"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="Alfanor 100 "
                        android:textSize="20sp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <!--บรรทัดสอง-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="ปริมาณที่ใช้"
                        android:textColor="@color/textcolorPrimaryDark"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="500 - 1000 "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtUnit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:hint="Unit "
                        android:textSize="20sp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <!--บรรทัดสาม-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#46000000"
            android:padding="15dp">

            <TextView
                android:id="@+id/txtSame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="Same Text"
                android:textColor="@color/textcolorPrimaryDark"
                android:textSize="@dimen/h2" />


        </LinearLayout>


    </LinearLayout>


    <!--Button-->
    <LinearLayout
        android:id="@+id/linButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:onClick="BackPage3"
            android:text="Back"
            android:textColor="@color/textcolorPrimaryDark" />


        <Button
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="Finish"
            android:textColor="@color/textcolorPrimaryDark" />

    </LinearLayout>


</RelativeLayout>

